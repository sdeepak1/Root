<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"

    android:background="@drawable/tour_show_bg"

    android:backgroundTint="#FFFDFD"
    android:elevation="5dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_margin="5dp"
        android:background="@drawable/sheemer_text_bg"
        android:elevation="2dp"
        android:padding="5dp"
        android:textColor="#C8C7C7"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/host_name"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_margin="5dp"
        android:background="@drawable/sheemer_text_bg"
        android:elevation="2dp"
        android:padding="5dp"
        android:textColor="#0CA513"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:background="#BCBABA"
        app:layout_constraintEnd_toEndOf="@+id/host_name"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/tour_game_name"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/sheemer_text_bg"
        android:elevation="2dp"
        android:padding="5dp"
        android:textColor="#232323"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/tour_name"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/sheemer_text_bg"
        android:elevation="2dp"
        android:padding="5dp"
        android:textColor="#151515"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tour_game_name" />

    <TextView
        android:id="@+id/dummy"
        android:layout_width="50dp"
        android:layout_height="20dp"

        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/sheemer_text_bg"
        android:elevation="2dp"
        android:padding="5dp"
        android:textColor="#1E1E1E"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/total_person"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/sheemer_text_bg"
        android:drawablePadding="3dp"
        android:elevation="2dp"
        android:padding="5dp"
        android:textColor="#0CA513"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tour_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dummy"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tour_time"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:background="@drawable/sheemer_text_bg"
        android:elevation="2dp"
        android:padding="5dp"
        android:textColor="@color/shadeRed"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tour_name"
        app:layout_constraintEnd_toStartOf="@+id/total_person"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toEndOf="@+id/tour_name"
        app:layout_constraintTop_toTopOf="@+id/total_person" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/tour_data_shape"
        android:backgroundTint="#BCBABA"
        android:padding="5dp"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_person" />


</androidx.constraintlayout.widget.ConstraintLayout>