<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Root" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyTabTextSize" parent="TextAppearance.Design.Tab">
    <item name="android:textSize">8sp</item>
    </style>

    <style name="MyTabTextSize1" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="styleRedToast">
        <item name="android:colorBackground">@color/shadeRed</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">#000</item>
        <item name="strokeWidth">1dp</item>
        <item name="length">SHORT</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="styleGreenToast">
        <item name="colorBackground">@color/green</item>
        <item name="textColor">@color/white</item>
        <item name="strokeColor">#000</item>
        <item name="strokeWidth">1dp</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="viewParent.headerText">
        <item name="textColor">@color/shadowColor</item>
        <item name="textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

<style name="viewParent.headerText.NoMode">
    <item name="textColor">@color/shadowColor</item>
</style>

    <style name="parent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="modifiedEditText" parent="parent">
        <item name="android:textSize">12sp</item>
        <item name="android:backgroundTint">@color/shadeRed</item>
    </style>

    <style name="loginButton" parent="viewParent">
        <item name="android:background">@drawable/login_button_bg</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="spinnerHintText" parent="parent">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/shadeRed</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation" tools:ignore="DuplicateDefinition">@android:anim/fade_in</item>
        <item name="android:windowEnterAnimation" tools:ignore="DuplicateDefinition">@android:anim/fade_out</item>
    </style>

    <style name="DialogAnimations">

    <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>

    <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>

</style>


</resources>